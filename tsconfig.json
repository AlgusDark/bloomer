{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "removeComments": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "importHelpers": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "bundles",
    "example",
    "lib",
    "es6",
    "src/**/*.test.*"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "rules": {
    "indent": [
      true,
      2
    ]
  }
}