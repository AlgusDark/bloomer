{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "removeComments": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,
    "jsx": "react",
    "importHelpers": true,
    "noImplicitAny": false,
    "noEmit": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "docs"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "rules": {
    "indent": [
      true,
      2
    ]
  }
}
