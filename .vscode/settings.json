{
    "relativePath.ignore": [
        "**/node_modules/**",
        "**/*.dll",
        "**/obj/**",
        "**/objd/**",
        "**/lib/**",
        "**/esm/**",
        "**/bundles/**",
        "**/reports/**"
    ],
    "typescript.tsdk": "node_modules/typescript/lib",
    // Editor configuration for prettierOnSave - https://github.com/prettier/prettier-vscode
    "editor.formatOnSave": false,
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.formatOnSave": true
    },
    "[css]": {
        "editor.formatOnSave": true
    },
    "[typescript]": {
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true
    }
}